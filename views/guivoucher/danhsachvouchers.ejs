<%- include('../main/header.ejs') %>

<div class="container mt-4">
    <h1>Danh sách Voucher</h1>

    <table id="dichVuTable" class="table table-striped table-bordered table-hover mt-3" >
        <thead class="thead-dark">
            <tr>
                <th class="text-center">Tên Voucher</th>
                <th class="text-center">Giảm giá %</th>
                <th class="text-center">Ngày Hết Hạn</th>
                <th class="text-center">Chức Năng</th>
            </tr>
        </thead>
        <tbody class="text-center">
            <% vouchers.forEach(voucher => { %>
                <tr>
                    <td class="text-center"><%= voucher.maGiamGia %></td>
                    <td class="text-center"><%= voucher.giamGia*100 %> %</td>
                    <td class="text-center"><%= new Date(voucher.ngayHetHan).toLocaleDateString() %></td>
                    <td class="text-center"><a href="guivouchers/<%= voucher._id %>" class="btn btn-primary">Gửi Voucher</a></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

  
</div>

<%- include('../main/footer.ejs') %>
